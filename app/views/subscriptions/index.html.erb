<h2>My subscriptions</h2>

<table class="table">
  <thead>
    <tr>
      <th>uuid</th>
      <th>Plan</th>
      <th>Quantity</th>
      <th>State</th>
      <th>Activated at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.uuid %></td>
        <td><%= subscription.plan.name %></td>
        <td><%= subscription.quantity %></td>
        <td><%= subscription.state %></td>
        <td><%= subscription.activated_at %></td>
        <td>
          <%= link_to_if subscription.state == 'active', 'Cancel', cancel_subscription_path(subscription.uuid),
                         :method => :put, :confirm => 'Are you sure?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit billing info', edit_billing_info_path %>
